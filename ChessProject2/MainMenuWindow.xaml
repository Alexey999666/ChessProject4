<Window x:Class="ChessProject2.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шахматы - Главное меню" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#A0522D"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="#DEB887" Margin="40" CornerRadius="15"
                BorderBrush="#8B4513" BorderThickness="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="ШАХМАТЫ" 
                          Grid.Row="0"
                          FontSize="32" FontWeight="Bold"
                          HorizontalAlignment="Center" Margin="0,40,0,20"
                          Foreground="#654321"/>

                <!-- Кнопки меню -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="Играть с другом" 
                            Click="PlayWithFriend_Click"
                            Margin="10" Height="50" Width="250"
                            Background="#D2B48C" BorderBrush="#8B4513"
                            Foreground="#654321" FontWeight="Bold" FontSize="16"/>

                    <Button Content="Играть с ботом" 
                            Click="PlayWithBot_Click"
                            Margin="10" Height="50" Width="250"
                            Background="#D2B48C" BorderBrush="#8B4513"
                            Foreground="#654321" FontWeight="Bold" FontSize="16"
                            IsEnabled="False"/>
                    <!-- Пока не используется -->
                </StackPanel>

                <!-- Кнопка выхода -->
                <Button Content="Выход" 
                        Grid.Row="2"
                        Click="Exit_Click"
                        Margin="10" Height="40" Width="100"
                        Background="#D2B48C" BorderBrush="#8B4513"
                        Foreground="#654321" FontWeight="Bold"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</Window>
