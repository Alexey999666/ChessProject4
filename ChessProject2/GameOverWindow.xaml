<Window x:Class="ChessProject2.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Игра завершена" Height="300" Width="400"
        WindowStyle="ToolWindow" ResizeMode="NoResize">

    <Border Background="#DEB887" BorderBrush="#8B4513" BorderThickness="2" CornerRadius="10" Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>

        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock x:Name="ResultText" Text="{Binding Result.ResultText}" 
                      FontSize="20" FontWeight="Bold" Foreground="#654321" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"
                      TextAlignment="Center"/>

            <Button Content="Главное меню" Click="MainMenu_Click" 
                    Margin="0,5" Height="35" Background="#D2B48C"
                    BorderBrush="#8B4513" Foreground="#654321"
                    FontWeight="Bold"/>

            <Button Content="Реванш" Click="Rematch_Click" 
                    Margin="0,5" Height="35" Background="#D2B48C"
                    BorderBrush="#8B4513" Foreground="#654321"
                    FontWeight="Bold"/>

            <Button Content="Анализ партии" Click="Analysis_Click" 
                    Margin="0,5" Height="35" Background="#D2B48C"
                    BorderBrush="#8B4513" Foreground="#654321"
                    FontWeight="Bold"/>
        </StackPanel>
    </Border>
</Window>
