<Window x:Class="ChessProject2.SideSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор стороны" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#A0522D"
        ResizeMode="NoResize">
    <Border Background="#DEB887" Margin="20" CornerRadius="10"
            BorderBrush="#8B4513" BorderThickness="2">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите сторону" 
                      FontSize="20" FontWeight="Bold"
                      HorizontalAlignment="Center" Margin="0,0,0,20"
                      Foreground="#654321"/>

            <Button Content="Играть за белых" 
                    Click="PlayAsWhite_Click"
                    Margin="10" Height="40" Width="200"
                    Background="#D2B48C" BorderBrush="#8B4513"
                    Foreground="#654321" FontWeight="Bold"/>

            <Button Content="Играть за черных" 
                    Click="PlayAsBlack_Click"
                    Margin="10" Height="40" Width="200"
                    Background="#D2B48C" BorderBrush="#8B4513"
                    Foreground="#654321" FontWeight="Bold"/>

            <Button Content="Случайный выбор" 
                    Click="PlayAsRandom_Click"
                    Margin="10" Height="40" Width="200"
                    Background="#D2B48C" BorderBrush="#8B4513"
                    Foreground="#654321" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</Window>
